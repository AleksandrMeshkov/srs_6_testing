<Window x:Class="srs_6_testing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:srs_6_testing"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#FFE8F4FC">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFE8F4FC" Offset="0"/>
                <GradientStop Color="#FFB3D9FF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <TextBlock Text="СРС 6 студента группы ПР 23-106 Мешкова Александра" 
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Top"
                   Margin="10"
                   FontSize="12"
                   Foreground="#FF444444"/>

        <Border Width="320" Height="300" 
                Background="White"
                CornerRadius="10"
                BorderThickness="1"
                BorderBrush="#FFCCCCCC"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel Margin="20" VerticalAlignment="Center">
                <TextBlock Text="Авторизация" 
                           FontSize="24" 
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"
                           Foreground="#FF2C3E50"/>

                <TextBox x:Name="txtLogin" 
                         Margin="0,0,0,15"
                         Padding="10"
                         FontSize="16"
                         BorderBrush="#FFBDC3C7"
                         BorderThickness="1">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border x:Name="border" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                Background="{TemplateBinding Background}" 
                                                CornerRadius="5">
                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <TextBox x:Name="txtPassword" 
                    Margin="0,0,0,15"
                    Padding="10"
                    FontSize="16"
                    BorderBrush="#FFBDC3C7"
                    BorderThickness="1">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border x:Name="border" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}" 
                                            Background="{TemplateBinding Background}" 
                                            CornerRadius="5">
                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <Button Content="Войти" 
                        Background="#FF3498DB"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Padding="10,5"
                        BorderThickness="0"
                        Margin="0,0,0,10"
                        Cursor="Hand" Click="Button_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <TextBlock Foreground="Green" Margin="10,10,0,0" HorizontalAlignment="Center">
                <Hyperlink NavigateUri="RegisterPage.xaml" RequestNavigate="Hyperlink_RequestNavigate">
                    <TextBlock Text="Зарегистрироваться" TextAlignment="Center"/>
                </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>